doctype html
head
  title Bootstrap Example
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')
  script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
  script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
  style 
    include ./style.css
.container
  .row 
    .col-sm-3
    .col-sm-6 
      if(stud)
       each item in stud
        form(method='post' action=`/update/${item.sn}`)
          label.form-label Name
          br
          input.form-control(type='text' name='sname' value=`${item.sname}`)
          br
          label.form-label Avg
          br
          input.form-control(type='text' name='avg' value=`${item.avgr}`)
          br
          input.btn.btn-danger(type='submit' name='Update' value='Update')
          br